self._hall_of_fame = [] #To be added to HangmanGame Class Attributes if Correct

    def add_player_score(self,score):
        #Add current player's score to hall of fame
        self._hall_of_fame.append({"username": self.player_username, "score": score})
        #Sort the hall of fame score in descending order
        self._hall_of_fame.sort(key=lambda x:["score"], reverse=True)
        #Show only Top 5
        self._hall_of_fame = self._hall_of_fame[:5]

    def display_hall_of_fame(self):
        print("\Hall of Fame - Top 5 Players: ")
        for i, record in enumerate(self._hall_of_fame, start=1):
            print(f"{i}. {record['username']} - Score: {record['score']}")
        print("\n")
